# MCP Server Configuration

# Environment settings
ENVIRONMENT=development
DEBUG=false

# Server settings
MCP_HOST=0.0.0.0
MCP_PORT=8080
MCP_WORKERS=1
MCP_ENABLE_CORS=true
MCP_CORS_ORIGINS=["*"]
MCP_API_PREFIX=/api/v1
MCP_ENABLE_DOCS=true

# Database settings
PGHOST=localhost
PGPORT=5432
PGDATABASE=mcp_server
PGUSER=postgres
PGPASSWORD=postgres
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20

# LLM settings
LLM_DEFAULT_PROVIDER=lmstudio
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1
LLM_TIMEOUT=60

# LM Studio settings
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_MODEL=

# Ollama settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=

# OpenAI settings (if using)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Tool settings
MCP_FS_ALLOWED_PATHS=["/workspace", "/tmp"]
MCP_FS_MAX_FILE_SIZE=10485760  # 10MB
MCP_GIT_ALLOWED_REPOS=[]
MCP_WEB_ENABLE_FETCH=true
MCP_WEB_ENABLE_SEARCH=true
MCP_WEB_MAX_RESPONSE_SIZE=5242880  # 5MB
MCP_WEB_TIMEOUT=30
MCP_CODE_ENABLE_COMPLETION=true
MCP_CODE_ENABLE_ANALYSIS=true
MCP_CODE_CACHE_TIMEOUT=3600

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/mcp_server.log
LOG_FILE_MAX_SIZE=104857600  # 100MB
LOG_FILE_BACKUP_COUNT=5

# Security settings
MCP_ENABLE_AUTH=false
MCP_JWT_SECRET_KEY=
MCP_JWT_ALGORITHM=HS256
MCP_JWT_EXPIRATION_HOURS=24
MCP_MAX_REQUEST_SIZE=10485760  # 10MB
MCP_ENABLE_INPUT_SANITIZATION=true

# Rate limiting
MCP_ENABLE_RATE_LIMITING=false
MCP_RATE_LIMIT_REQUESTS=100
MCP_RATE_LIMIT_WINDOW=60